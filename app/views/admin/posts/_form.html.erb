  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => "80" %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, ["draft", "publish"] %>
  </div>
  <div class="field">
    <%= f.label :post_type %><br />
    <%= f.select :post_type, ["post", "link", "quote","photo", "diary"] %>
  </div>
